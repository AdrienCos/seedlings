"""Simple class used to demonstrate the Python template."""
from loguru import logger


class ExampleClass:
    """Dummy class with an empty constructor, used for demonstration purposes."""

    def __init__(self) -> None:
        """Initialize an instance of the `ExampleClass`, and logs a debug message."""
        logger.debug(f"Instance of {self.__class__.__name__} created")
        pass

    def add(self, a: int, b: int) -> int:
        """Returns the sum of the two inputs.

        Args:
            a (int): First number to sum
            b (int): Second number to sum

        Returns:
            int: Sum of the two inputs
        """
        logger.debug(f"add method called, with arguments {a} and {b}")
        return a + b
