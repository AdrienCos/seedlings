{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "pre-commit": {
    "commitMessageTopic": "pre-commit hook {{depName}}",
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)\\.pre-commit-config\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "matchStrings": [
        "ARG PDM_VERSION=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "pdm",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "matchStrings": [
        "ARG COPIER_VERSION=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "copier",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^copier.yml$/"
      ],
      "matchStrings": [
        "_min_copier_version: \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "copier",
      "datasourceTemplate": "pypi"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "pypi",
      "managerFilePatterns": [
        "/^python/pyproject.toml.j2$/"
      ],
      "matchStrings": [
        "    \"(?<depName>.*?)==(?<currentValue>.*?)\""
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "typos",
      "matchPackageNames": [
        "/typos/"
      ]
    },
    {
      "groupName": "isort",
      "matchPackageNames": [
        "/isort/"
      ]
    },
    {
      "groupName": "black",
      "matchPackageNames": [
        "/black/"
      ]
    },
    {
      "groupName": "ruff",
      "matchPackageNames": [
        "/ruff/"
      ]
    },
    {
      "groupName": "pyright",
      "matchPackageNames": [
        "/pyright/"
      ]
    },
    {
      "groupName": "pdm",
      "matchPackageNames": [
        "/pdm/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
